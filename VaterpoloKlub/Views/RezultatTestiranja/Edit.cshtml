@model VaterpoloKlub.ViewModels.RezultatTestiranjaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RezultatTestiranja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ime i prezime</th>
                        @foreach (var item in Model.VjezbeTestiranje)
                        {
                            <th scope="col">@item.Vjezba.NazivVjezbe</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Clanovi.Count; i++)
                    {
                    <tr>
                        <td>@(Model.Clanovi[i].Ime+" "+Model.Clanovi[i].Prezime) </td>
                        <input type="hidden" asp-for="Clanovi[i].ID" />
                        <input type="hidden" asp-for="Clanovi[i].Ime" />
                        <input type="hidden" asp-for="Clanovi[i].Prezime" />
                        <input type="hidden" asp-for="Clanovi[i].Email" />
                        <input type="hidden" asp-for="Clanovi[i].Kontakt" />
                        <input type="hidden" asp-for="Clanovi[i].Mjesto" />
                        <input type="hidden" asp-for="Clanovi[i].Adresa" />
                        @for (int j = 0; j < Model.Clanovi[i].RezultatiTestiranja.Count; j++)
                        {
                    <td>
                        <input type="hidden" asp-for="Clanovi[i].RezultatiTestiranja[j].TestiranjeId" />
                        <input type="hidden" asp-for="Clanovi[i].RezultatiTestiranja[j].VjezbaId" />
                        <input type="hidden" asp-for="Clanovi[i].RezultatiTestiranja[j].ClanId" />
                        <input class="form-control" asp-for="Clanovi[i].RezultatiTestiranja[j].Rezultat" />
                    </td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
            <input type="submit" value="Save" class="btn btn-primary" />
