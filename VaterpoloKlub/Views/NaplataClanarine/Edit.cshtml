<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Uređivanje naplate clanarine</title>
</head>
<body>

<h4>NaplataClanarine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UpravnikId" class="control-label"></label>
                <select asp-for="UpravnikId" class="form-control" asp-items="ViewBag.UpravnikId"></select>
                <span asp-validation-for="UpravnikId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClanarinaId" class="control-label"></label>
                <select asp-for="ClanarinaId" class="form-control" asp-items="ViewBag.ClanarinaId"></select>
                <span asp-validation-for="ClanarinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spasi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
