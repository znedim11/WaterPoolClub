@model VaterpoloKlub.Models.Ekipa

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ekipa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
    </dl>
    <table class="table table-bordered col-4">
        <thead>
            <tr>
                <th>Igraci</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clanovi)
            {
                <tr>
                    <td>@(item.Clan.Ime + " " + item.Clan.Prezime)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
