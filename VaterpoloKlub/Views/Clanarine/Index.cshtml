@model IEnumerable<VaterpoloKlub.Models.Clanarina>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatumPocketa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumKraja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatumPocketa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumKraja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clan.Ime) @Html.DisplayFor(modelItem => item.Clan.Prezime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
